@model MvcMovie.Models.Mescola

@{
    ViewData["Title"] = "Cancella";
}

<style>
    /* Stili per la pagina */
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #17a2b8; /* Cambio colore del titolo grande */
        text-align: center;
    }

    h3 {
        color: black; /* Cambio colore del sottotitolo */
        text-align: center;
    }

    dl {
        width: 60%; /* Allargato leggermente per evitare troncamenti */
        margin: 0 auto;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    dt,
    dd {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
        white-space: normal; /* Per garantire che il testo non venga troncato */
    }

    dt {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        color: white;
        text-decoration: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
            text-decoration: none;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        color: white;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            text-decoration: none;
        }

</style>

<h1>Cancella</h1>
<br />

<h3>Sei sicuro di voler cancellare?</h3>

<div>
    <dl class="row">
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descrizione)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descrizione)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataProduzione)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataProduzione)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Prezzo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Prezzo)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="🗑️ Cancella" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">⬅️ Torna alla lista</a>
    </form>
</div>

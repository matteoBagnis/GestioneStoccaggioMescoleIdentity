@model MvcMovie.Models.Mescola

@{
    ViewData["Title"] = "Modifica";
}

<style>
    /* Stili per la pagina */
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        margin-bottom: 10px;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        color: white;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            text-decoration: none;
        }

    /* Stili per il pulsante "Salva" */
    .save-button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        background-color: #007bff; /* colore blu */
        color: white;
        cursor: pointer;
        margin-bottom: 10px;
        text-align: center;
    }

        .save-button:hover {
            background-color: #0056b3; /* colore blu scuro al passaggio del mouse */
        }

</style>

<h1>Modifica</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" data-ajax="true" data-ajax-method="post" data-ajax-update="#editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataProduzione" class="control-label"></label>
                <input asp-for="DataProduzione" class="form-control" />
                <span asp-validation-for="DataProduzione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="📝 Salva" class="save-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Torna alla lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
